/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.open {
  margin-top: 200px;
  border: 1px solid #df4;
  border-radius: 10px;
  padding: 10px;
  background-color: #ffe;
  box-shadow: fuchsia 10px;
}