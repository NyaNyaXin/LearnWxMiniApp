<!--index.wxml-->
<view class="container">
  <view class="userinfo">
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">您好:{{userInfo.nickName}}</text>
  </view>
  <view class="usermotto" catchtap=''>
    <button bindgetuserinfo='handlerGetUserInfo' open-type='getUserInfo' style='display:{{isShow?"block": "none"}}'>{{motto}}</button>
  </view>
</view>
